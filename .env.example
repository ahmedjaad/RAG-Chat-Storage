# Application
PORT=8080
API_KEYS=replace-with-comma-separated-secure-random-string
REQUESTS_PER_MINUTE=60
RATE_BURST=20
# CORS: use '*' for open origins (credentials disabled), or list explicit origins for credentials
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# MySQL
DB_URL=jdbc:mysql://mysql:3306/rag_chat_storage
DB_USERNAME=root
DB_PASSWORD=secret
MYSQL_ROOT_PASSWORD=secret
MYSQL_DATABASE=rag_chat_storage


# Spring AI / OpenAI
OPENAI_API_KEY=your-open-ai-api-key
OPENAI_BASE_URL=https://api.openai.com
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small

# If you run with the ollama profile, set below values appropriately
#OLLAMA_CHAT_MODEL=llama3
#OLLAMA_BASE_URL=http://rag-ollama:11434

# Rate limiter
RATELIMIT_REDIS_ENABLED=true
# This is the Redis' container name in docker-compose, if the backend is run locally, change it to localhost
REDIS_HOST=rag-redis

# Spring Profiles
SPRING_PROFILES_DEFAULT=prod
SPRING_PROFILES_ACTIVE=prod,openai
